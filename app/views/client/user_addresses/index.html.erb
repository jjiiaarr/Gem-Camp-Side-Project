<h1>Address List</h1>

<table class="table">
  <thead>
  <td>Genre</td>
  <td>Name</td>
  <td>Street</td>
  <td>Region</td>
  <td>Province</td>
  <td>City</td>
  <td>Barangay</td>
  <td>Phone number</td>
  <td>Remark</td>
  <td>Default Address</td>
  </thead>
  <% @user_addresses.each do |address| %>
    <tr>
      <td><%= address.genre %></td>
      <td><%= address.name %></td>
      <td><%= address.street %></td>
      <td><%= address.region&.name %></td>
      <td><%= address.province&.name %></td>
      <td><%= address.city&.name %></td>
      <td><%= address.barangay&.name %></td>
      <td><%= address.phone %></td>
      <td><%= address.remark %></td>
      <td><%= address.is_default %></td>
      <td>
        <%= link_to 'Edit', edit_client_user_address_path(address) %>
        <%= button_to 'Delete', client_user_address_path(address), method: :delete %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Address', new_client_user_address_path %>